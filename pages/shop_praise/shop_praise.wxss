/* pages/shop_praise/shop_praise.wxss */
@import '../template/template.wxss';

.order_image {
  padding: 30rpx 0;
}

.section {
  padding: 30rpx;
  background: #fff;
}

.section textarea {
  width: 100%;
  background: #f7f7f7;
  font-size: 30rpx;
  color: #333;
  padding: 20rpx;
  box-sizing: border-box;
}

.ordernumber {
  margin-top: 20rpx;
}

.order_list {
  border-bottom: 1rpx solid #e4e4e4;
}

.area_item {
  margin: 30rpx 0;
  width: 100%;
  line-height: 36rpx;
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  font-size: 28rpx;
  color: #333;
  align-items: center;
}

.area_item .name {
  flex: 5;
  -webkit-box-flex: 5;
}

.area_item .count {
  flex: 1;
  -webkit-box-flex: 1;
  text-align: center;
}

.area_item .price {
  flex: 2;
  -webkit-box-flex: 2;
  text-align: right;
}
