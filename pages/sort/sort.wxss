/* pages/sort/sort.wxss */
.sorts_scroll{
  position: fixed;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 100vh; 
  background: #fff;
}
.sorts_scroll .sorts_item{
  width: 100%;
  height: 116rpx;
  line-height: 116rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  background: #fff;
  border: 1rpx solid #e4e4e4;
  margin-top: -1rpx;
  box-sizing: border-box;
}
.sorts_item.select_item{
  color: #ff6709;
  background: #f5f5f5;
  border-right: none;
}
.sorts_show{
  margin-left:210rpx;
  margin-right: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.show_area{
  width: 100%;
  min-height: 1020rpx;
  background: #fff;
  overflow: hidden;
}
.show_item{
  float: left;
  margin: 25rpx 0;
  width: 33%;
  text-align: center;
}
.show_item image{
  margin: 10rpx auto;
  width:88rpx;
  height: 88rpx;
  border-radius: 50%;
  vertical-align: top;
}
.show_item text{
  display: block;
  font-size: 24rpx;
  color: #666;
}