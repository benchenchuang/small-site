/* pages/cart/cart.wxss */


.carts_box {
  margin-top: 30rpx;
  width: 100%;
  padding: 0 30rpx;
  padding-bottom: 100rpx;
  background: #fff;
  border-top: 1rpx solid #e4e4e4;
  border-bottom: 1rpx solid #e4e4e4;
  box-sizing: border-box;
}

.cart_flex {
  position: relative;
  border-bottom: 1rpx solid #eee;
  height: 208rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.cart_flex:last-child {
  border-color: #fff;
}

.cart_item {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  /* padding: 36rpx 0; */
  display: flex;
  align-content: center;
  z-index: 5;
  transition: all 0.2s ease;
  background: #fff;
}

.cart_item .cart_check {
  flex: 1;
  -webkit-box-flex: 1;
}

.cart_check checkbox {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
}

.cart_item .cart_pic {
  /* flex: 3;
  -webkit-box-flex: 3;  
  align-self: center;  */
  width: 180rpx;
  height: 180rpx;
  margin-top: 14rpx;
}

.cart_item .cart_desc {
  position: relative;
  padding-top: 20rpx;
  padding-left: 30rpx;
  flex: 6;
  -webkit-box-flex: 6;
  box-sizing: border-box;
}

.cart_title {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.cart_btm {
  width: 100%;
  position: absolute;
  right: 0;
  bottom: 14rpx;
  box-sizing: border-box;
}

.cart_btm .cart_price {
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #d2352c;
}

.cart_counter {
  position: absolute;
  right: 0;
  bottom: 0;
}

.cart_counter .counter_btn {
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 44rpx;
  color: #333;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
}

.cart_counter .count {
  display: inline-block;
  font-size: 30rpx;
  color: #333;
  padding: 0 20rpx;
  line-height: 56rpx;
  vertical-align: top;
}

.cart_flex .del {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #e64340;
  width: 150rpx;
  height: 208rpx;
  line-height: 208rpx;
  text-align: center;
  z-index: 4;
  color: #fff;
}

.cart_foot {
  width: 100%;
  height: 108rpx;
  position: fixed;
  z-index: 999;
}

.cart_totals {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  box-shadow: 0 -1rpx 4rpx 1rpx rgba(0, 0, 0, 0.05);
}

.cart_totals {
  width: 100%;
  padding-left: 30rpx;
  display: flex;
  display: -webkit-flex;
  font-size: 30rpx;
  line-height: 108rpx;
  color: #333;
  box-sizing: border-box;
}

.cart_totals .total_all {
  flex: 2;
  -webkit-box-flex: 2;
}

.cart_totals .total_price {
  flex: 3;
  -webkit-box-flex: 3;
}

.total_price text {
  color: #d2352c;
  font-size: 32rpx;
}

.cart_totals .total_get {
  flex: 3;
  -webkit-box-flex: 3;
  color: #fff;
  text-align: center;
  background: #ff6709;
  border-radius: 0;
}
