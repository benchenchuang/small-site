/* pages/shop_detail/shop_detail.wxss */
@import '../template/template.wxss';

.detail_head{
  padding: 20rpx 30rpx;
  background: #fff;
}
.shop_price{
  margin-top: 10rpx;
}
.detail_title{
  font-size: 30rpx;
  color: #333;
}
.shop_depict{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.shop_price .now_price{
  font-size: 32rpx;
}
.detail_main{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.detail_main image{
  width: 100%;
}
.shop_controls{
  width: 100%;
  height: 98rpx;
}
.control_box{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display:flex;
  display:-webkit-flex;
  height: 98rpx;
  font-size: 24rpx;
  color: #666;
  background: #fff;
  box-shadow: 0 -1rpx 4rpx 1rpx rgba(0, 0,0, .1);
  box-sizing: border-box;
}
.control_box .control_item{
  padding: 12rpx 0;
  flex:2;
  -webkit-box-flex:2;
  text-align:center;
  line-height: 1.5;
}
.control_box .control_item image{
  vertical-align: top;
  padding-bottom: 14rpx;
}
.control_box .control_btn{
  flex:3;
  -webkit-box-flex:3;
  text-align: center;
  line-height: 98rpx;
  font-size: 30rpx;
  color: #fff;
}
.control_item image{
  width: 100%;
  height: 40rpx;
}
.yellow_btn{
  background: #f0ba29;
}
.red_btn{
  background: #ff6709;
}
button.control_contact{
  font-size: 24rpx;
  color: #666;
  line-height:1.5;
  background: #fff; 
}
button.control_contact::after{
  border: none;
}
button.control_contact image{
  vertical-align:-4rpx;
}
