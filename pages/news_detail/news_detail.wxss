.tip_content{
  margin: 30rpx 0;
  padding:10rpx 30rpx;
  font-size: 15px;
  color: #333;
  border-top: 1rpx solid #e4e4e4;
  border-bottom: 1rpx solid #e4e4e4;
  background:#fff;
}
.tip_content .title{
  display: block;
  line-height: 2;
  font-size: 36rpx;
  color: #000;
  text-align: center;
}
.tip_content .time{
  display: block;
  font-size: 12px;
  color: #999;
}
.content{
  margin:20rpx 0;
}
.content text{
  display: block;
  text-indent: 60rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #444;
}
.content image{
  display: block;
  max-width: 100%;
  margin: 10rpx auto;
}